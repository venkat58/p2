<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/ny_background"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/one_twenty_dp"
        android:layout_gravity="center"
        android:padding="@dimen/three_dp"
        android:background="@color/shadow"
        android:gravity="center" >

        <ImageView  android:id="@+id/hl_p_image"
            android:layout_width="@dimen/one_twenty_dp"
            android:layout_height="@dimen/one_twenty_dp"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/eight_dp"
            android:minWidth="@dimen/one_twenty_dp" />

        <TextView
            android:id="@+id/hl_p_name"
            android:layout_width="@dimen/one_twenty_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_dp"
            android:background="@color/semi_transparent"
            android:textColor="@color/white" />
    </RelativeLayout>

</android.support.v7.widget.CardView>