<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/eight_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <TextView
        android:id="@+id/departmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/three_dp"
        android:background="@color/white"
        android:textSize="@dimen/twenty_dp"
        android:textColor="@color/myPrimaryDarkColor"/>
    <apps.awesome.vv.com.vvsimpleaio.adapters.HorizontalListView
        android:id="@+id/departmentCategories"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/three_dp"
        android:layout_height="@dimen/one_twenty_dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        app:dividerWidth="@dimen/eight_dp"
        />

    </LinearLayout>

</android.support.v7.widget.CardView>
